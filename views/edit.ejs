<%- include("partials/header") %>

    <style>
        /* Styling for the current image preview */
        .current-image-preview {
            border: 2px solid #dee2e6;
            transition: all 0.3s ease;
        }

        .current-image-preview:hover {
            border-color: #007bff;
            transform: scale(1.02);
        }

        /* Button styling improvements */
        .btn-group .btn {
            margin-right: 0.5rem;
        }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
    </style>

    <div class="container"></div>
    <!-- Hero Section -->
    <section class="hero-section text-center text-white">
        <div class="hero-overlay">
            <div class="container py-5">
                <h2 class="pt-5 display-5 fw-bold">Edit Article</h2>
                <p class="lead">Update your article information below.</p>
            </div>
        </div>
    </section>

    <div class="col" style="color: white;">
        <div class="col-md-8 order-md-1 justify-content-center mx-auto dark-card p-4 rounded">
            <h4 class="mb-3">Edit Article Form</h4>

            <!-- Form submits to update route with article ID -->
            <form class="needs-validation" action="/articles/<%= article.id %>/update" method="POST"
                enctype="multipart/form-data" novalidate>

                <!-- Article Title Input - Pre-filled with existing title -->
                <div class="mb-3">
                    <label for="title">Article Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= article.title %>"
                        placeholder="Enter article title" required>
                    <div class="invalid-feedback">
                        Please enter your Article Title.
                    </div>
                </div>

                <!-- Article Content Textarea - Pre-filled with existing content -->
                <div class="mb-3">
                    <label for="article" class="form-label">Article</label>
                    <textarea class="form-control" id="article" name="article" placeholder="Enter your Article" rows="8"
                        style="resize: vertical; min-height: 150px; max-height: 600px;" maxlength="10000"
                        required><%= article.article %></textarea>
                    <div class="invalid-feedback">
                        Please enter your Article.
                    </div>
                </div>

                <!-- Article Brief Input - Pre-filled with existing brief -->
                <div class="mb-3">
                    <label for="brief">Article Brief</label>
                    <input type="text" class="form-control" id="brief" name="brief" value="<%= article.brief %>"
                        placeholder="Brief description of your article" required>
                    <div class="invalid-feedback">
                        Please enter your Article Brief.
                    </div>
                </div>

                <!-- Current Image Display -->
                <% if (article.imageUrl) { %>
                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        <div class="current-image-preview"
                            style="max-width: 200px; height: 150px; background-image: url('<%= article.imageUrl %>'); background-size: cover; background-position: center; border-radius: 8px; margin-bottom: 10px;">
                        </div>
                    </div>
                    <% } %>

                        <!-- New Image Upload - Optional for updates -->
                        <div class="mb-3">
                            <label for="image" class="form-label">Update Cover Image (Optional)</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*">
                            <div class="form-text">Leave empty to keep current image</div>
                        </div>

                        <hr class="mb-4">

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <button class="btn btn-success btn-lg" type="submit">Update Article</button>
                            <a href="/articles/<%= article.id %>" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
            </form>
        </div>
    </div>
    </div>

    <%- include("partials/footer") %>